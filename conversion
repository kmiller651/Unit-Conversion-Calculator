<SCRIPT type="text/javascript">
function onClick_button() {
	var textBox1 = document.getElementById("myTextBox");
	var textBox2 = document.getElementById("mySecondText");
	var answerDiv = document.getElementById("theAnswer");
	var myAnswer = (Number(textBox1.value) * Number(textBox2.value));
	// I used an extra variable to make the code easier to read.
	answerDiv.innerHTML = "The answer is " + myAnswer;
} // end function
</SCRIPT>
